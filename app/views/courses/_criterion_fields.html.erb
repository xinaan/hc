<div class="nested-fields">

  <div class="form-group">
    <%= f.label "Criterion " , class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_area :description, row: 3, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Priority " , class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.number_field :seats, step: 1 , class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="links">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to_remove_association 'Remove', f, :class => "btn btn-danger btn-xs" %>
      </div>
    </div>
  </div>
</div>