<div class="col-md-12">
  <h2 class="page-header">Courses <%= link_to 'New Course', new_course_path, class:"btn btn-success pull-right" %></h2>
  <table id="course-table" class="table table-striped table-bordered table-hover dataTable no-footer">
    <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Faculty</th>
      <th>Level</th>
      <th>Semester</th>
      <th>Mode</th>
      <th>Seats</th>
      <th>Fee</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.code %></td>
          <td><%= course.faculty.short %></td>
          <td><%= course.level %></td>
          <td><%= course.semester %></td>
          <td><%= course.mode %></td>
          <td><%= course.seats %></td>
          <td class="text-center"><%= number_to_currency(course.fee, unit: "MVR ") %></td>
          <td class="text-center">
            <a href="<%= edit_course_path(course) %>">
              <i class="fa fa-pencil fa-lg"></i></a>
            <a href="<%= invisible_course_path(course) %>">
              <i class="fa fa-eye<%= course.visible ? '' : '-slash' %> fa-lg"></i></a>
            <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="<%= course_path(course)%>">
              <i class="fa fa-trash-o fa-lg text-danger"></i>
            </a>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script>
    $(document).ready(function() {
        $('#course-table').DataTable({
            responsive: true
            stateSave: true
        });
    } );
</script>


