<%= form_for @faculty, :html => { class:"form-horizontal"} do |f| %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Faculty Details</h3>
  </div>
  <div class="panel-body">
    <div class="form-group <%= "has-error" if @faculty.errors[:name].any? %> ">
		<%= f.label 'Name', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.text_field :name, placeholder:"Name",maxlength:50, class:"form-control" %>
			  <% if @faculty.errors[:name].any? %>
				  <span class="help-block">
				  <% @faculty.errors.full_messages_for(:name).each do |msg| %>
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>

    <div class="form-group <%= "has-error" if @faculty.errors[:short].any? %> ">
      <%= f.label 'Name', class:"col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :short, placeholder:"Short Name",maxlength:5, class:"form-control" %>
        <% if @faculty.errors[:short].any? %>
				  <span class="help-block">
				  <% @faculty.errors.full_messages_for(:short).each do |msg| %>
					<%= msg %><br>
				  <% end %>
				  </span>
        <% end %>
      </div>
    </div>
	
	<div class="form-group <%= "has-error" if @faculty.errors[:description].any? %> ">
		<%= f.label 'Description', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.text_area :description, size: "24x6", class:"form-control" %>
			  <% if @faculty.errors[:description].any? %>
				  <span class="help-block">
				  <% @faculty.errors.full_messages_for(:description).each do |msg| %>
					<%= msg %><br>
				  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>

	<div class="form-group <%= "has-error" if @faculty.errors[:visible].any? %> ">
		<%= f.label 'Visible', class:"col-sm-2 control-label"%>
		<div class="col-sm-10">
			  <%= f.select :visible, [['Visible', true], ['Invisible', false]], {prompt:"Select a Option"}, class:"form-control"%>
			  <% if @faculty.errors[:visible].any? %>
				  <span class="help-block">
					  <% @faculty.errors.full_messages_for(:visible).each do |msg| %>
							<%= msg %><br>
					  <% end %>
				  </span>
			  <% end %>
		</div>
	</div>

 </div>
 <div class="panel-footer">
	  <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="btn-group">
						<%= f.submit class:"btn btn-success" %>
						<% end %> 
						
				</div>
			
			</div>
	  </div>
  </div>
</div> 
  
